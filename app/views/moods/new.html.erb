
<% if @mood.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@mood.errors.count, "error") %>
      prohibited this mood from being saved:
    </h2>
 
    <ul>
    <% @mood.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h3>Mood</h3>

<%= form_for @mood do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <h2>TV show</h2>  
  <ul>

    <%= f.fields_for :tvshows do |tvshows_form| %>
        <li>      
          <%= tvshows_form.label :title %>
          <%= tvshows_form.text_field :title %>
        </li>
        
        <li>
          <%= tvshows_form.label :suspense_level %>
          <%= tvshows_form.number_field :suspense_level %>
        </li>
        <li>
          <%= tvshows_form.label :time_commitment %>
          <%= tvshows_form.number_field :time_commitment %>
        </li>
        <li>
          <%= tvshows_form.label :price %>
          <%= tvshows_form.number_field :price %>           
        </li>
    <% end %>

  </ul>
  <%= f.submit %>

<% end %>

